<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                BlaBlaArticle - Лучший генератор статей
            {% endblock %}
        </title>

        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-light bg-light static-top">
            <div class="container">
            <span class="navbar-brand">BlaBlaArticle</span>
            <a class="js-scroll-trigger" href="#services">Сервисы</a>
            <a class="js-scroll-trigger" href="#author">Автор</a>
            
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <a class="btn btn-primary" href="{{ path('app_logout') }}">Выйти</a>
            {% else %}
                <a class="btn btn-primary" href="{{ path('app_login') }}">Войти</a>
            {% endif %}
            
            </div>
        </nav>
        <header class="masthead text-white text-center">
            <div class="overlay"></div>
            {% block overlay %}{% endblock %}
        </header>
        {% block body %}{% endblock %}
        <footer class="footer bg-light">
            <div class="container">
            <div class="row">
                <div class="col-lg-6 h-100 text-center text-lg-left my-auto">
                <p class="text-muted small mb-4 mb-lg-0">&copy; BlaBlaArticle 2020.</p>
                </div>
                <div class="col-lg-6 h-100 text-center text-lg-right my-auto">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item mr-3">
                    <a href="#"><i class="fab fa-facebook fa-2x fa-fw"></i></a>
                    </li>
                    <li class="list-inline-item mr-3">
                    <a href="#"><i class="fab fa-vk fa-2x fa-fw"></i></a>
                    </li>
                    <li class="list-inline-item">
                    <a href="#"><i class="fab fa-instagram fa-2x fa-fw"></i></a>
                    </li>
                </ul>
                </div>
            </div>
            </div>
      </footer>
    </body>
</html>
