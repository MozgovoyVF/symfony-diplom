{% extends "base.html.twig" %}
{% block title %}Регистрация на BlaBlaArticle{% endblock %}
{% block overlay %}
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center text-primary">Регистрация</h5>
            <div class="alert alert-success" role="alert">
              Для завершения регистрации подтвердите ваш email
            </div>
            {{ form_start(registrationForm, { attr: {class: 'form-signin'} }) }}

            <div class="form-label-group">
              {{ form_row(registrationForm.firstName, {
                    required: true,
                    label: 'Вашe имя',
                    attr: {placeholder: 'Ваше имя', class: 'form-control'},
                }) }}
            </div>
                
                
              <div class="form-label-group">
                {{ form_row(registrationForm.email, {
                  required: true,
                  attr: {placeholder: 'Ваш Email', class: 'form-control'},
                  label: 'Ваш Email'
                }) }}
              </div>

              <div class="form-label-group">
              {{ form_row(registrationForm.plainPassword.first, {
                    attr: {placeholder: 'Ваш Пароль', class: 'form-control'},
                    required: true,
                    label: 'Ваш пароль'
                }) }}
             </div>

             <div class="form-label-group">
              {{ form_row(registrationForm.plainPassword.second, { 
                    attr: {placeholder: 'Подтвердите Ваш пароль', class: 'form-control'},
                    required: true,
                    label: 'Подтвердите Ваш пароль'
                }) }}
             </div>
          <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Регистрация</button>
          <hr class="my-4">
          <div class="text-center"><a href="{{ path('app_login') }}">Я уже зарегистрирован</a></div>
            {{ form_end(registrationForm) }}


            
              
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}


